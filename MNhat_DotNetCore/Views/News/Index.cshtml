// Sử dụng ViewModel
@model List<MNhat_DotNetCore.Controllers.NewsController.Article>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //1 Sử dụng ViewBag
    //var articles = ViewBag.Article;

    //2 Sử dụng View Data
    //var articles = ViewData["Articles"] as List<MNhat_DotNetCore.Controllers.NewsController.Article>;
}

<table class="table">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Content</th>
        <th>Author</th>
    </tr>
    @*@foreach (var article in articles)*@
    @foreach (var article in Model)
    {
        <tr>
            <td>@article.ID</td>
            <td>@article.Title</td>
            <td>@article.Content</td>
            <td>@article.Author</td>
        </tr>
    }
</table>

